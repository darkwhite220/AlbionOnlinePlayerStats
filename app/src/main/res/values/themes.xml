<resources xmlns:tools="http://schemas.android.com/tools">
    <!--DropDown background color-->
    <attr name="dropDownCustomColor" format="color" />
    <attr name="mainLayoutCustomStrokeColor" format="color" />

    <!-- Base application theme. -->
    <style name="Theme.AlbionOnlinePlayerStats" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slate_Gray</item>
        <item name="colorPrimaryVariant">@color/charcoal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_Shadows</item>
        <item name="colorSecondaryVariant">@color/cinereous</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.Custom</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView.Custom</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice.Custom</item>
        <!--Smooth animations when changing theme-->
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <!--used in MainFragment-->
        <item name="dropDownCustomColor">@color/slate_Gray</item>
        <item name="mainLayoutCustomStrokeColor">@android:color/transparent</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.Custom" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/_2dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">@dimen/_1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.Custom</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.Custom">
        <item name="cornerSize">@dimen/_8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Choice.Custom" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">@dimen/_6dp</item>
    </style>
</resources>